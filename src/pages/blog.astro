---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

function getReadingTime(content: string) {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}

// Get unique tags
const allTags = [...new Set(posts.flatMap(post => post.data.tags))];
---

<Layout 
  title="Blog | Full Product Dev"
  description="Explore our articles on product development, engineering best practices, and building software that users love."
>
  <div class="container" style="flex: 1; min-height: 100%;">
    <header style="text-align: center; margin-bottom: clamp(3rem, 6vh, 4rem); padding-top: clamp(1rem, 3vh, 2rem);">
      <h1 style="font-size: clamp(2.25rem, 5vw, 3rem); margin-bottom: clamp(1rem, 2vh, 1.5rem);">Blog</h1>
      <p style="font-size: clamp(1.125rem, 2.5vw, 1.25rem); color: var(--text-muted); max-width: min(600px, 90vw); margin: 0 auto;">
        Insights on product development, engineering excellence, and building 
        software that makes a difference.
      </p>
    </header>

    <!-- Featured Posts -->
    {sortedPosts.filter(post => post.data.featured).length > 0 && (
      <section style="margin-bottom: clamp(3rem, 6vh, 4rem);">
        <h2 style="margin-bottom: 2rem; color: var(--text-primary);">Featured Articles</h2>
        <div class="blog-grid">
          {sortedPosts.filter(post => post.data.featured).map(post => (
            <article class="blog-card" style="border: 2px solid var(--primary-200);">
              <div class="blog-card-content">
                <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem;">
                  <span style="background: var(--primary-600); color: white; padding: 0.125rem 0.5rem; border-radius: var(--radius-sm); font-size: 0.75rem; font-weight: 600;">
                    FEATURED
                  </span>
                </div>
                
                <h3 class="blog-card-title">
                  <a href={`/blog/${post.slug}/`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="blog-card-excerpt">
                  {post.data.description}
                </p>
                
                <div class="blog-card-meta">
                  <span class="blog-card-date">
                    <svg class="icon icon-sm icon-muted icon-before-sm" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                      <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                    </svg>
                    {formatDate(post.data.pubDate)}
                  </span>
                  
                  <span>
                    <svg class="icon icon-sm icon-muted icon-before-sm" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                      <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                      <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                    </svg>
                    {getReadingTime(post.body)} min read
                  </span>
                </div>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; margin-top: 1rem;">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- All Posts -->
    <section style="flex: 1; padding-bottom: clamp(2rem, 4vh, 3rem);">
      <h2 style="margin-bottom: clamp(1.5rem, 4vh, 2rem); color: var(--text-primary); font-size: clamp(1.5rem, 3vw, 2.25rem);">All Articles</h2>
      <div class="blog-grid">
        {sortedPosts.map(post => (
          <article class="blog-card">
            <div class="blog-card-content">
              <h3 class="blog-card-title">
                <a href={`/blog/${post.slug}/`}>
                  {post.data.title}
                </a>
              </h3>
              
              <p class="blog-card-excerpt">
                {post.data.description}
              </p>
              
              <div class="blog-card-meta">
                <span class="blog-card-date">
                  <svg class="icon icon-sm icon-muted icon-before-sm" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                  </svg>
                  {formatDate(post.data.pubDate)}
                </span>
                
                <span>
                  <svg class="icon icon-sm icon-muted icon-before-sm" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                  </svg>
                  {getReadingTime(post.body)} min read
                </span>
              </div>
              
              {post.data.tags && post.data.tags.length > 0 && (
                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; margin-top: 1rem;">
                  {post.data.tags.slice(0, 3).map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </section>
  </div>
</Layout>
